function main(){
if [ $(($1 % 2)) == 0 ]; then
s5.relax
fi
if [ $(($1 % 3)) == 0 ]; then
if [ $(($2 % 2)) == 0 ]; then
s5.static.opt
else
s5.static
fi
fi
if [ $(($1 % 5)) == 0 ]; then
s7
fi
if [ $(($1 % 7)) == 0 ]; then
s8
fi
if [ $(($1 % 11)) == 0 ]; then
if [ $(($2 % 3)) == 0 ]; then
s9
else
s9
fi
fi
if [ $(($1 % 13)) == 0 ]; then
if [ $(($2 % 5)) == 0 ]; then
s10_metal
else
s10
fi
fi
}

function loop(){
for i in $(ls -d */)
do
if [[ $i == no* ]] ; then
continue
fi
if [ $(($1 % 7)) == 0 ]; then
cp KPOINTS_band $i/KPOINTS_band
fi
if [ $(($1 % 11)) == 0 ]; then
cp KPOINTS_dos $i/KPOINTS_dos
fi
cd $i
main $1 $2
if [ $(($1 % 7)) == 0 ]; then
rm KPOINTS_band
fi
if [ $(($1 % 11)) == 0 ]; then
rm KPOINTS_dos
fi
cd ..
done
}

function choose(){
for i in $@
do
if [ $(($1 % 7)) == 0 ]; then
cp KPOINTS_band $i/KPOINTS_band
fi
if [ $(($1 % 11)) == 0 ]; then
cp KPOINTS_dos $i/KPOINTS_dos
fi
cd $i
main $1 $2
if [ $(($1 % 7)) == 0 ]; then
rm KPOINTS_band
fi
if [ $(($1 % 11)) == 0 ]; then
rm KPOINTS_dos
fi
cd ..
done
}


